<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="plugin.video.familiaiptv"
       name="Familia Iptv"
       version="0.0.2"
       provider-name="Robert Kahn">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
    <import addon="script.module.beautifulsoup" version="3.2.1"/>
    <import addon="script.module.simple.downloader" version="0.9.4"/>
    <import addon="script.module.beautifulsoup4" />
    <import addon="script.module.simple.downloader" version="0.9.4"/>
    <import addon="script.module.requests" />
    <import addon="script.module.httplib2" />
    <import addon="script.module.youtube.dl" optional="true"/>
    <import addon="plugin.video.youtube" />
    <import addon="script.module.urlresolver" optional="true"/>
    <import addon="script.module.simplejson" />
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary>Familia Iptv</summary>
    <description>O melhor conforto para toda a Familia</description>
    <platform>all</platform>
  </extension>
</addon>

<addon id="repo.familia" name="repositorio familia" version="0.0.2" provider-name="Robert Kahn">
	<extension point="xbmc.addon.repository" name="repositorio.familiaiptv">
		<info compressed="false">http://raw.githubusercontent.com/maniackodi2016/repositorio.familiaiptv/master/addons.xml</info>
		<checksum>http://raw.githubusercontent.com/maniackodi2016/repositorio.familiaiptv/master/addons.xml.md5</checksum>
		<datadir zip="true">http://raw.githubusercontent.com/maniackodi2016/repositorio.familiaiptv/master/repo/</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>Repositorio da Familia</summary>
		<description>A Familia junta-se aqui</description>
		<disclaimer></disclaimer>
		<platform>all</platform>
	</extension>
</addon>
</addons>
